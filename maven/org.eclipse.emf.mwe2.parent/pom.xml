			<organization>TypeFox GmbH</organization>
		</developer>
		<developer>
			<id>sven.efftinge</id>
			<name>Sven</name>
			<email>sven.efftinge@typefox.io</email>
			<organization>TypeFox GmbH</organization>
			<roles>
				<role>project lead</role>
			</roles>
		</developer>
	</developers>
</project>
